---
import { getTranslations, type Language } from '../i18n/translations';
import Logo from './Logo.astro';

interface Props {
  lang?: Language;
}

const { lang = 'en' } = Astro.props;
const t = getTranslations(lang);
---

<nav class="nav">
	<div class="container">
		<div class="nav-content">
			<a href="/" class="logo">
				<Logo size="large" class="logo-svg" />
			</a>

			<div class="nav-links">
				<a href="#features">{t.nav.features}</a>
				<a href="#pricing">{t.nav.pricing}</a>
				<a href="https://chekku.co" target="_blank" rel="noopener">Chekku</a>
			</div>

			<div class="nav-actions">
				<div class="language-switcher">
					<button
						class="lang-btn"
						data-lang="en"
						data-active={lang === 'en' ? 'true' : 'false'}
					>
						EN
					</button>
					<span class="lang-separator">|</span>
					<button
						class="lang-btn"
						data-lang="es"
						data-active={lang === 'es' ? 'true' : 'false'}
					>
						ES
					</button>
				</div>
				<a href="/login" class="btn-link">{t.nav.login}</a>
				<a href="/signup" class="btn-primary">{t.nav.signup}</a>
			</div>
		</div>
	</div>
</nav>

<script>
	function setupLanguageSwitcher() {
		const langButtons = document.querySelectorAll('.lang-btn');

		langButtons.forEach(button => {
			button.addEventListener('click', () => {
				const newLang = button.getAttribute('data-lang');
				const currentUrl = new URL(window.location.href);
				currentUrl.searchParams.set('lang', newLang || 'en');
				window.location.href = currentUrl.toString();
			});
		});
	}

	// Run on initial load
	setupLanguageSwitcher();

	// Re-run after page navigation (for SPA-like behavior)
	document.addEventListener('astro:page-load', setupLanguageSwitcher);
</script>

<style>
	.nav {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		background: rgba(255, 255, 255, 0.98);
		backdrop-filter: blur(10px);
		border-bottom: 1px solid var(--color-border);
		z-index: 1000;
		padding: 1rem 0;
	}

	.container {
		max-width: 1280px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.nav-content {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.logo {
		display: flex;
		align-items: center;
	}

	.logo :global(.logo-svg) {
		color: #2C2B47;
	}

	.nav-links {
		display: flex;
		gap: 2rem;
		align-items: center;
	}

	.nav-links a {
		color: var(--color-text);
		font-weight: 500;
		transition: color 0.2s;
	}

	.nav-links a:hover {
		color: var(--color-primary);
	}

	.nav-actions {
		display: flex;
		gap: 1rem;
		align-items: center;
	}

	.btn-link {
		color: var(--color-text);
		font-weight: 500;
		padding: 0.5rem 1rem;
		transition: color 0.2s;
	}

	.btn-link:hover {
		color: var(--color-primary);
	}

	.btn-primary {
		background: var(--color-primary);
		color: white;
		padding: 0.75rem 1.5rem;
		border-radius: 0.5rem;
		font-weight: 600;
		transition: all 0.2s;
		border: 2px solid var(--color-text);
		box-shadow: 2px 2px 0px var(--color-text);
	}

	.btn-primary:hover {
		background: var(--color-primary-dark);
		transform: translate(-1px, -1px);
		box-shadow: 3px 3px 0px var(--color-text);
	}

	.language-switcher {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.5rem 0.75rem;
		background: rgba(0, 0, 0, 0.03);
		border-radius: 0.5rem;
	}

	.lang-btn {
		background: none;
		border: none;
		color: var(--color-text-light);
		font-weight: 500;
		font-size: 0.875rem;
		cursor: pointer;
		padding: 0.25rem 0.5rem;
		border-radius: 0.25rem;
		transition: all 0.2s;
	}

	.lang-btn:hover {
		color: var(--color-primary);
		background: rgba(59, 130, 246, 0.1);
	}

	.lang-btn[data-active="true"] {
		color: var(--color-primary);
		font-weight: 600;
	}

	.lang-separator {
		color: var(--color-border);
		font-size: 0.875rem;
	}

	@media (max-width: 768px) {
		.nav-links {
			display: none;
		}

		.container {
			padding: 0 1rem;
		}

		.btn-link {
			display: none;
		}

		.btn-primary {
			padding: 0.5rem 1rem;
			font-size: 0.875rem;
		}

		.language-switcher {
			padding: 0.25rem 0.5rem;
		}

		.lang-btn {
			font-size: 0.75rem;
			padding: 0.125rem 0.375rem;
		}
	}
</style>
