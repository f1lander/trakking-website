---
import { getTranslations, type Language } from '../i18n/translations';
import Logo from './Logo.astro';

interface Props {
  lang?: Language;
}

const { lang = 'en' } = Astro.props;
const t = getTranslations(lang);
---

<nav class="nav">
	<div class="container">
		<div class="nav-content">
			<a href="/" class="logo">
				<Logo size="large" class="logo-svg logo-desktop" />
				<Logo size="medium" class="logo-svg logo-mobile" />
			</a>

			<div class="nav-links">
				<a href="#features">{t.nav.features}</a>
				<a href="#pricing">{t.nav.pricing}</a>
				<a href="https://chekku.co" target="_blank" rel="noopener">Chekku</a>
			</div>

			<div class="nav-actions nav-actions-desktop">
				<div class="language-switcher">
					<button
						class="lang-btn"
						data-lang="en"
						data-active={lang === 'en' ? 'true' : 'false'}
					>
						EN
					</button>
					<span class="lang-separator">|</span>
					<button
						class="lang-btn"
						data-lang="es"
						data-active={lang === 'es' ? 'true' : 'false'}
					>
						ES
					</button>
				</div>
				<a href="/login" class="btn-link">{t.nav.login}</a>
				<a href="/signup" class="btn-primary">{t.nav.signup}</a>
			</div>

			<div class="nav-actions-mobile-top">
				<a href="/login" class="btn-link-mobile-top">{t.nav.login}</a>
			</div>

			<button class="menu-toggle" aria-label="Toggle menu">
				<span class="menu-icon"></span>
				<span class="menu-icon"></span>
				<span class="menu-icon"></span>
			</button>
		</div>

		<div class="mobile-menu">
			<div class="mobile-menu-content">
				<div class="mobile-links">
					<a href="#features">{t.nav.features}</a>
					<a href="#pricing">{t.nav.pricing}</a>
					<a href="https://chekku.co" target="_blank" rel="noopener">Chekku</a>
				</div>
				<div class="mobile-actions">
					<div class="language-switcher-mobile">
						<button
							class="lang-btn"
							data-lang="en"
							data-active={lang === 'en' ? 'true' : 'false'}
						>
							EN
						</button>
						<span class="lang-separator">|</span>
						<button
							class="lang-btn"
							data-lang="es"
							data-active={lang === 'es' ? 'true' : 'false'}
						>
							ES
						</button>
					</div>
					<a href="/login" class="btn-link-mobile">{t.nav.login}</a>
					<a href="/signup" class="btn-primary-mobile">{t.nav.signup}</a>
				</div>
			</div>
		</div>
	</div>
</nav>

<script>
	function setupLanguageSwitcher() {
		const langButtons = document.querySelectorAll('.lang-btn');

		langButtons.forEach(button => {
			button.addEventListener('click', () => {
				const newLang = button.getAttribute('data-lang');
				
				// Build new path based on language
				let newPath;
				if (newLang === 'es') {
					newPath = '/es/';
				} else {
					newPath = '/';
				}
				
				window.location.href = newPath;
			});
		});
	}

	function setupMobileMenu() {
		const menuToggle = document.querySelector('.menu-toggle');
		const mobileMenu = document.querySelector('.mobile-menu');
		const nav = document.querySelector('.nav');

		if (!menuToggle || !mobileMenu) return;

		menuToggle.addEventListener('click', () => {
			mobileMenu.classList.toggle('is-open');
			menuToggle.classList.toggle('is-active');
			nav?.classList.toggle('menu-open');
		});

		// Close menu when clicking on a link
		const mobileLinks = mobileMenu.querySelectorAll('a');
		mobileLinks.forEach(link => {
			link.addEventListener('click', () => {
				mobileMenu.classList.remove('is-open');
				menuToggle.classList.remove('is-active');
				nav?.classList.remove('menu-open');
			});
		});
	}

	// Run on initial load
	setupLanguageSwitcher();
	setupMobileMenu();

	// Re-run after page navigation (for SPA-like behavior)
	document.addEventListener('astro:page-load', () => {
		setupLanguageSwitcher();
		setupMobileMenu();
	});
</script>

<style>
	.nav {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		background: rgba(255, 255, 255, 0.98);
		backdrop-filter: blur(10px);
		border-bottom: 1px solid var(--color-border);
		z-index: 1000;
		padding: 1rem 0;
	}

	.container {
		max-width: 1280px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.nav-content {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.logo {
		display: flex;
		align-items: center;
		z-index: 1001;
	}

	.logo :global(.logo-svg) {
		color: #2C2B47;
	}

	.logo-mobile {
		display: none !important;
	}

	.logo-desktop {
		display: block !important;
	}

	.nav-actions-mobile-top {
		display: none;
	}

	.nav-links {
		display: flex;
		gap: 2rem;
		align-items: center;
	}

	.nav-links a {
		color: var(--color-text);
		font-weight: 500;
		transition: color 0.2s;
	}

	.nav-links a:hover {
		color: var(--color-primary);
	}

	.nav-actions {
		display: flex;
		gap: 1rem;
		align-items: center;
	}

	.btn-link {
		color: var(--color-text);
		font-weight: 500;
		padding: 0.5rem 1rem;
		transition: color 0.2s;
	}

	.btn-link:hover {
		color: var(--color-primary);
	}

	.btn-primary {
		background: var(--color-primary);
		color: white;
		padding: 0.75rem 1.5rem;
		border-radius: 0.5rem;
		font-weight: 600;
		transition: all 0.2s;
		border: 2px solid var(--color-text);
		box-shadow: 2px 2px 0px var(--color-text);
	}

	.btn-primary:hover {
		background: var(--color-primary-dark);
		transform: translate(-1px, -1px);
		box-shadow: 3px 3px 0px var(--color-text);
	}

	.language-switcher {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.5rem 0.75rem;
		background: rgba(0, 0, 0, 0.03);
		border-radius: 0.5rem;
	}

	.lang-btn {
		background: none;
		border: none;
		color: var(--color-text-light);
		font-weight: 500;
		font-size: 0.875rem;
		cursor: pointer;
		padding: 0.25rem 0.5rem;
		border-radius: 0.25rem;
		transition: all 0.2s;
	}

	.lang-btn:hover {
		color: var(--color-primary);
		background: rgba(59, 130, 246, 0.1);
	}

	.lang-btn[data-active="true"] {
		color: var(--color-primary);
		font-weight: 600;
	}

	.lang-separator {
		color: var(--color-border);
		font-size: 0.875rem;
	}

	.menu-toggle {
		display: none;
		flex-direction: column;
		gap: 4px;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.5rem;
		z-index: 1001;
	}

	.menu-icon {
		width: 24px;
		height: 3px;
		background: var(--color-text);
		border-radius: 2px;
		transition: all 0.3s ease;
	}

	.menu-toggle.is-active .menu-icon:nth-child(1) {
		transform: rotate(45deg) translate(6px, 6px);
	}

	.menu-toggle.is-active .menu-icon:nth-child(2) {
		opacity: 0;
	}

	.menu-toggle.is-active .menu-icon:nth-child(3) {
		transform: rotate(-45deg) translate(6px, -6px);
	}

	.mobile-menu {
		display: none;
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: rgba(255, 255, 255, 0.98);
		backdrop-filter: blur(10px);
		z-index: 1000;
		overflow-y: auto;
		transform: translateX(100%);
		transition: transform 0.3s ease;
	}

	.mobile-menu.is-open {
		transform: translateX(0);
	}

	.mobile-menu-content {
		padding: 5rem 2rem 2rem;
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.mobile-links {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.mobile-links a {
		color: var(--color-text);
		font-weight: 500;
		font-size: 1.125rem;
		transition: color 0.2s;
		padding: 0.5rem 0;
	}

	.mobile-links a:hover {
		color: var(--color-primary);
	}

	.mobile-actions {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		padding-top: 1rem;
		border-top: 1px solid var(--color-border);
	}

	.language-switcher-mobile {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.75rem;
		background: rgba(0, 0, 0, 0.03);
		border-radius: 0.5rem;
		justify-content: center;
	}

	.btn-link-mobile {
		color: var(--color-text);
		font-weight: 500;
		padding: 0.75rem 1rem;
		text-align: center;
		transition: color 0.2s;
		border-radius: 0.5rem;
	}

	.btn-link-mobile:hover {
		color: var(--color-primary);
		background: rgba(0, 200, 122, 0.1);
	}

	.btn-primary-mobile {
		background: var(--color-primary);
		color: white;
		padding: 0.875rem 1.5rem;
		border-radius: 0.5rem;
		font-weight: 600;
		text-align: center;
		transition: all 0.2s;
		border: 2px solid var(--color-text);
		box-shadow: 2px 2px 0px var(--color-text);
	}

	.btn-primary-mobile:hover {
		background: var(--color-primary-dark);
		transform: translate(-1px, -1px);
		box-shadow: 3px 3px 0px var(--color-text);
	}

	.btn-link-mobile-top {
		color: var(--color-text);
		font-weight: 500;
		padding: 0.5rem 1rem;
		transition: color 0.2s;
		font-size: 0.875rem;
	}

	.btn-link-mobile-top:hover {
		color: var(--color-primary);
	}

	@media (max-width: 768px) {
		.logo-desktop {
			display: none !important;
		}

		.logo-mobile {
			display: block !important;
		}

		.nav-links {
			display: none;
		}

		.nav-actions-desktop {
			display: none;
		}

		.nav-actions-mobile-top {
			display: flex;
			align-items: center;
			margin-left: auto;
			margin-right: 1rem;
		}

		.menu-toggle {
			display: flex;
		}

		.mobile-menu {
			display: block;
		}

		.container {
			padding: 0 1rem;
		}

		.nav-content {
			position: relative;
		}
	}
</style>
