---
import { getTranslations, type Language } from '../i18n/translations';
import '@lottiefiles/dotlottie-web';

interface Props {
  lang?: Language;
}

const { lang = 'en' } = Astro.props;
const t = getTranslations(lang);
---

<section class="hero">
	<div class="container">
		<div class="hero-layout">
			<div class="hero-content">
				<h1 class="hero-title">
					{t.hero.title}<br />
					{t.hero.subtitle}
				</h1>
				<p class="hero-description">
					{t.hero.description}
				</p>
				<div class="hero-actions">
					<a href="/signup" class="btn-primary-large">{t.hero.cta}</a>
				</div>
				<p class="hero-note">{t.hero.noCreditCard}</p>
			</div>

		<div class="hero-image">
			<div class="lottie-container">
				<dotlottie-player
					src="https://lottie.host/83341b24-1d62-4a51-a41b-846a3c0b7c64/mDA431FYMV.lottie"
					autoplay
					loop
					style="width: 100%; height: 100%;"
				></dotlottie-player>
			</div>
		</div>
	</div>
</div>
</section>

<style>
	.hero {
		padding: 8rem 0 4rem;
		background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
		margin-top: 4rem;
		overflow: hidden;
		position: relative;
	}

	.container {
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.hero-layout {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
	}

	.hero-content {
		max-width: 600px;
	}

	.hero-title {
		font-size: 4rem;
		font-weight: 600;
		line-height: 1.1;
		letter-spacing: -0.03em;
		color: #2C2B47;
		margin-bottom: 1.5rem;
	}

	.hero-description {
		font-size: 1.25rem;
		color: #64748b;
		margin-bottom: 2.5rem;
		line-height: 1.7;
	}

	.hero-actions {
		display: flex;
		gap: 1rem;
		margin-bottom: 1.5rem;
	}

	.btn-primary-large {
		background: #00E887;
		color: white;
		padding: 1.125rem 2.5rem;
		border-radius: 12px;
		font-weight: 600;
		font-size: 1.125rem;
		transition: all 0.3s ease;
		border: 3px solid var(--color-text);
		box-shadow: 2px 2px 0px var(--color-text);
	}

	.btn-primary-large:hover {
		background: #00c772;
		transform: translate(-2px, -2px);
		box-shadow: 4px 4px 0px var(--color-text);
	}

	.hero-note {
		color: #94a3b8;
		font-size: 0.875rem;
	}

	/* Hero Image Styles */
	.hero-image {
		position: relative;
		height: 600px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.lottie-container {
		width: 100%;
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	@media (max-width: 1024px) {
		.hero-layout {
			grid-template-columns: 1fr;
			gap: 3rem;
		}

		.hero-content {
			text-align: center;
			max-width: 100%;
		}

		.hero-actions {
			justify-content: center;
		}

		.hero-image {
			height: 500px;
		}
	}

	@media (max-width: 768px) {
		.hero {
			padding: 6rem 0 3rem;
		}

		.hero-title {
			font-size: 2.75rem;
		}

		.hero-description {
			font-size: 1.125rem;
		}

		.hero-actions {
			flex-direction: column;
			align-items: stretch;
		}

		.btn-primary-large {
			width: 100%;
		}

		.container {
			padding: 0 1rem;
		}

		.hero-image {
			height: 400px;
		}
	}
</style>
